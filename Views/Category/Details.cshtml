@model ECommerce.Models.Category

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>


<div class="panel panel-primary">
    <div class="panel-body">
        @foreach (var item in Model.Products)
        {
            <div class="col-sm-6 col-md-3">
                <div class="thumbnail1">
                    <img height="1000" width="1000" src="~/Images/@item.ImagePath" />
                </div>
                <div class="caption">
                    <h4>@item.ProductName</h4>
                    <p>@item.Description</p>
                    <h3>Price: ₹@item.UnitPrice</h3>
                    <button class="btn btn-primary" onclick="location.href='@Url.Action("Create","CartItem",new { id=item.ID})'">Add to Cart</button>
                    @*<button class="btn btn-success" onclick="location.href='@Url.Action("Details","Product",new { id=item.ID})'">View</button>*@
                </div>
                <br />
            </div>
            <br />
        }
    </div>
</div>
